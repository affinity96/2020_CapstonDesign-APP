<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/pet_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="91dp"
        app:layout_constraintBottom_toTopOf="@+id/pet_gender"/>

    <EditText
        android:id="@+id/pet_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="178dp"
        app:layout_constraintTop_toBottomOf="@+id/pet_name"/>

    <EditText
        android:id="@+id/pet_species"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="274dp"
        app:layout_constraintTop_toBottomOf="@+id/pet_gender"
        />
   <EditText
        android:id="@+id/pet_neutralization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="376dp"
       app:layout_constraintTop_toBottomOf="@+id/pet_species"/>
</androidx.constraintlayout.widget.ConstraintLayout>